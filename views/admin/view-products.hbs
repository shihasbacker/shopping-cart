<section>
    <div class="container">
        <div class="row mt-4">
          <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">title</th>
      <th scope="col">category</th>
      <th scope="col">description</th>
      <th>image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width: 50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product" class="btn btn-primary">Edit</a>
        {{!-- <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger">Delete</a> --}}
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want to delete {{this.name}} ?')">Delete</a>
        
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>
    </div>
</section>